doctype html
html(lang='ru')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href='./assets/apple-touch-icon.png' rel='apple-touch-icon' sizes='180x180')
        link(type='image/png' href='./assets/favicon-32x32.png' rel='icon' sizes='32x32')
        link(type='image/png' href='./assets/favicon-16x16.png' rel='icon' sizes='16x16')
        link(href='./assets/site.webmanifest' rel='manifest')
        title Youngsters - Изменить пароль
        link(href="css/main.min.css" rel="stylesheet")
        script(src="js/minified/main.min.js" defer)
        script(src="js/minified/change-password.min.js" defer)
    body
        include ./components/organisms/header.jade
        include ./components/organisms/headerSidebar.jade
        include ./components/organisms/modalCompositions/modalIncorrectPassword.jade

        include ./components/molecules/categoriesHeader.jade

        include ./components/atoms/buttons/buttonFirst.jade
        include ./components/atoms/input.jade

        +header('black')
        +headerSidebar()
        main.main
            .categories-header__wrapper
                +categoriesHeader()
            .main__inner--change-password
                section.change-password
                    .container
                        form.change-password-form(action="#" name="change-password-form")
                            p.change-password-form__title Изменить пароль
                            .change-password-form__fields
                                .change-password-form-field
                                    p.change-password-form-field__title Введите новый пароль
                                    +input('password', 'Пароль', 'change-password-form-password-1', 'password', true)
                                .change-password-form-field
                                    p.change-password-form-field__title Повторите пароль
                                    +input('password', 'Пароль', 'change-password-form-password-2', 'password', true)
                            +buttonFirst('Сохранить', 'change-password-submit', 'submit')
                +modalIncorrectPassword()
        template#change-password-thanks
            h2.change-password-thanks__title Ваш пароль успешно изменён!


