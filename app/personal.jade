doctype html
html(lang='ru')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href='./assets/apple-touch-icon.png' rel='apple-touch-icon' sizes='180x180')
        link(type='image/png' href='./assets/favicon-32x32.png' rel='icon' sizes='32x32')
        link(type='image/png' href='./assets/favicon-16x16.png' rel='icon' sizes='16x16')
        link(href='./assets/site.webmanifest' rel='manifest')
        title Youngsters - MYOUNGSTERS
        link(href="css/main.min.css" rel="stylesheet")
        script(src="js/minified/main.min.js" defer)
    body
        include ./components/organisms/header.jade
        include ./components/organisms/footer.jade
        include ./components/organisms/headerSidebar.jade

        include ./components/molecules/categoriesHeader.jade
        include ./components/molecules/personalNav.jade

        include ./components/atoms/breadcrumbs.jade

        +header('black')
        +headerSidebar()
        main.main
            .categories-header__wrapper
                +categoriesHeader()
                - var breadcrumbsPages = [{title: 'Главная',href: '#'},{title: 'MYOUNGSTERS',href: '#'}]
                .container
                    +breadcrumbs(breadcrumbsPages)
            .main__inner--personal
                section.personal
                    .container
                        .personal-container.personal__inner
                            +personalNav(0)
                            .personal-center
                                .personal__img
                                    img(src="./images/content/banners/personal/1.jpg", alt="Мужчина позирует в украшениях Youngsters")
                                a.personal-card(href="personal-details.html")
                                    svg.personal-card__icon
                                        use(xlink:href="./images/sprite.svg#male-user-black-filled")
                                    p.personal-card__title Мои данные
                                    p.personal-card__text Обновляйте свои регистрационные данные, адреса доставки
                            .personal-bottom
                                a.personal-card(href="personal-orders.html")
                                    svg.personal-card__icon
                                        use(xlink:href="./images/sprite.svg#shopping-bag-black-filled")
                                    p.personal-card__title Мои заказы
                                    p.personal-card__text Отслеживайте статус актуальных заказов, смотрите историю исполненных
                                a.personal-card(href="personal-favorites.html")
                                    svg.personal-card__icon
                                        use(xlink:href="./images/sprite.svg#heart-black-filled")
                                    p.personal-card__title Избранное
                                    p.personal-card__text Сохраняйте понравившиеся Вам изделия, проверяйте их наличие и скидки
                                .personal__img
                                    img(src="./images/content/banners/personal/2.jpg", alt="Мужчина позирует в украшениях Youngsters")
        +footer()


