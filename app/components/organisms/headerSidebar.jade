include ../atoms/menuItems/menuItem.jade
include ../atoms/menuItems/menuItemDropdown.jade

mixin headerSidebar()
    aside.header-sidebar(data-dropdown-list="header-sidebar")
        .header-sidebar-top
            p.header-sidebar-top__text Меню
            svg(data-dropdown-close="header-sidebar")
                use(xlink:href="./images/sprite.svg#close")
        ul.header-sidebar__list
            li.header-sidebar__list-item
                +menuItemDropdown('Каталог', 'header-sidebar-catalog')
                ul.menu-dropdown-list(data-dropdown-list='header-sidebar-catalog')
                    - var menuDropdownList = [{ text: 'Кольца', link: '/' },{ text: 'Серьги', link: '/' },{ text: 'Браслеты', link: '/' },{ text: 'Цепи', link: '/' },{ text: 'Ожерелья', link: '/' },{ text: 'Аксессуары', link: '/' },{ text: 'Все', link: '/' }]
                    for menuDropdownItem in menuDropdownList
                        li.menu-dropdown-list__item
                            a.menu-dropdown-list__item-link(href="#{menuDropdownItem.link}")= menuDropdownItem.text
            li.header-sidebar__list-item
                +menuItem('Мастерская', '/')
            li.header-sidebar__list-item
                +menuItem('О нас', '/')
            li.header-sidebar__list-item
                +menuItem('Контакты', '/')