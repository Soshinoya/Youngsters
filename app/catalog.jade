doctype html
html(lang='ru')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='apple-touch-icon' sizes='180x180' href='./assets/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='./assets/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='./assets/favicon-16x16.png')
        link(rel='manifest' href='./assets/site.webmanifest')
        title Youngsters - Каталог
        link(rel="stylesheet" href="css/main.min.css")
        script(src="js/minified/main.min.js" defer)
        script(src="js/minified/catalog.min.js" defer)
    body
        include ./components/organisms/header.jade
        include ./components/organisms/footer.jade
        include ./components/organisms/headerSidebar.jade
        include ./components/organisms/catalogFilter.jade

        include ./components/molecules/card.jade
        include ./components/molecules/loadMore.jade

        include ./components/atoms/breadcrumbs.jade

        +header('black')
        +headerSidebar()
        main.main
            section.catalog-hero
                .container
                    .catalog-hero__inner
                        - var breadcrumbsPages = [{title: 'Главная',href: '#'},{title: 'Каталог',href: '#'}]
                        +breadcrumbs(breadcrumbsPages)
                        h1.catalog-hero__title
                            |   New
                            span Collection
                        .catalog-hero__img
                            img(src="./images/content/banners/catalog/catalog.jpg" alt="Мужчина позирует в одежде Youngsters")
            section.catalog
                .container
                    .catalog__holder
                        .catalog__inner
                            .catalog-filter__label(data-dropdown-target="catalog-filter")
                                p.catalog-filter__label-text Фильтр
                                svg 
                                    use(xlink:href="./images/sprite.svg#slider")
                            .catalog__items
                            +catalogFilter()
                        +loadMore()
